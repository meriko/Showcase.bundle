<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www\.showcase\.ca/.*"
	plugin=".*/video/swf/flvPlayer.swf"
	initialState="playing"
	version="1.0">

	<crop x="0" y="0" width="912" height="510" />

	<!-- PLAYING -->
	<state name="playing">

		<!-- Click to pause -->
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="456" y="255" />
				<click x="20" y="500" />
			</action>
		</event>

	</state>

	<!-- PAUSED -->
	<state name="paused">

		<!-- Wait for play command -->
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="456" y="255" />
				<click x="20" y="500" />
			</action>
		</event>

	</state>

</site>
